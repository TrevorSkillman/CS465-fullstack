<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>{{title}}</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>About</h1>
							<h2>{{aboutPage.upperInfo.heading}}</h2>
							{{{aboutPage.upperInfo.info}}}
							<hr>
							<div class="ads">
								{{#each aboutPage.sideInfo}}
								<h2>{{this.heading}}</h2>
								{{{this.info}}}
								{{/each}}
							</div>
							{{#each aboutPage.moreInfo}}
							<h2>{{this.heading}}</h2>
							{{{this.info}}}
							{{/each}}
						</div>
					</div>
				</div>
			</div>
		</div>
		{{>footer}}
	</div>
</body>
</html>